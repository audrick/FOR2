<h1>Users#list</h1>

<%= link_to "Edit Your Meal Preferences", edit_user_path %><br/>

<h1>Meals based on your preferences</h1><br/>
<h2>Your current zip code is: <%= @auth.zip_code %></h2>
<br/>
<table>
  <tr>
    <th>Meal Name</th>
    <th>Zip Code</th>
    <th>Seller</th>
    <th>Price</th>
    <th>Description</th>
    <th>Cuisine Types</th>
    <th>Approximate Distance</th>

  </tr>

<%= render :partial => 'map', :locals => {:lat => @user.lat, :lng => @user.lng, :zoom => 14} %>
<%= render :partial => 'pin', :collection => @meals, :as => :meal %>


<% @meals.each do |meal| %>
  <tr>
    <td><%= link_to meal.meal_name, meal_path(meal) %></td>
    <td><%= meal.users.first.zip_code %></td>
    <td><%= meal.users.first.username %></td>
    <td><p><%= number_to_currency(meal.meal_price) %></p></td>
    <td><%= meal.meal_description %></td>
    <td><%= meal.cuisines.map { |cuisine| cuisine.cuisine_name }.join(", ") %></td>
    <td><%= %></td>
  </tr>
  <% end %>

</table><br/>
